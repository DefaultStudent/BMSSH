<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="pojo.BookType" table="booktype">
        <id name="booktypeid" column="booktypeid">
            <generator class="assigned" />
        </id>
        <property name="booktypename" column="booktypename"></property>
        <set name="bookinfos" cascade="all">
            <key column="booktypeid"/>
            <one-to-many class="pojo.BookInfo"/>
        </set>
    </class>
</hibernate-mapping>